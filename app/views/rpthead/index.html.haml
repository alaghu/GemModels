%h1= "#{controller_path.capitalize} #{action_name.capitalize}"
%h2 Find me in app/views/rpthead/index.html.erb
%p= "#{@Rpthead.count} records"

%div
  %table
    -#Table header lists all the attribute names only from the first record
    %thead
      %tr
        - first =@Rpthead.first
          -#What is the indent rule here
          - first.attribute_names.each do |attribute|
          %th= attribute.capitalize

    -#Table rows lists all the attributes and its values
    %tbody
      - @Rpthead.each do |record|
        %tr
        -#What is the indent rule here
        - record.attribute_names.each do |attribute|
          %td= record.attributes[attribute]